{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "include": [
            "**/src/*.ts"
        ]
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}